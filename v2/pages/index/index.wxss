/**index.wxss**/
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.page-container {
  padding: 24rpx;
  padding-bottom: 48rpx; /* 恢复为正常的底部内边距 */
  background-color: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 通用卡片样式 */
.card {
  width: 90%;
  margin: 0 auto 32rpx auto;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding-bottom: 24rpx;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 绳子数量选择器 */
.string-count-selector, .initial-colors-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.label {
  font-size: 28rpx;
  color: #555;
}

/* 颜色选择器公共样式 */
.color-picker-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  align-items: center;
}

.color-chip {
  width: 100rpx;
  height: 64rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: bold;
  border: 1px solid rgba(0,0,0,0.1);
}

/* 目标图案配置 */
.pattern-controls {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.btn {
  flex: 1;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
  background-color: #f2f3f5;
  color: #323233;
  line-height: 1.2;
}

.pattern-rows-container {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.pattern-row {
  border: 1rpx solid #f0f0f0;
  border-radius: 12rpx;
  padding: 24rpx;
}

.row-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.row-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #555;
}

.btn-delete {
  background-color: #ee0a24;
  color: white;
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
  line-height: 1.2;
}

.btn-add-knot {
  width: 64rpx;
  height: 64rpx;
  padding: 0;
  font-size: 40rpx;
  background-color: #e8f5e9;
  color: #4caf50;
}

/* 新的生成按钮样式 */
.generate-section {
  margin-top: 48rpx; /* 与上方的卡片保持间距 */
  display: flex;
  justify-content: center;
}

.btn-generate {
  width: 90%; /* 按钮宽度与卡片一致 */
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  background: linear-gradient(90deg, #3498db, #8e44ad);
  border-radius: 12rpx;
  border: none;
}

/* 选择器样式 */
.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  background-color: #f9f9f9;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

/* 颜色网格样式 */
.color-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  justify-content: center;
}

.color-slot {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.color-slot.empty {
  border: 2rpx dashed #ddd;
  background-color: #f9f9f9;
}

.color-slot.filled {
  border: 2rpx solid #007aff;
}

.color-display {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.5);
}

.color-placeholder {
  color: #999;
  font-size: 24rpx;
}

/* 图案编辑器 */
.pattern-editor {
  margin-top: 20rpx;
}

.knot-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  padding: 20rpx;
  justify-content: flex-start;
}

.knot-slot {
  width: 90rpx;
  height: 90rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.knot-slot.empty {
  border: 2rpx dashed #ddd;
  background-color: #f9f9f9;
}

.knot-slot.filled {
  border: 2rpx solid #007aff;
}

.knot-display {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 22rpx;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.5);
}

.knot-placeholder {
  color: #999;
  font-size: 22rpx;
}

.pattern-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 20rpx;
}

/* 操作区域 */
.action-section {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.action-section button {
  width: 100%;
  font-size: 36rpx;
  padding: 30rpx;
}

/* 颜色选择器弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.color-picker-modal {
  background-color: white;
  border-radius: 16rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  background: none;
  border: none;
  font-size: 40rpx;
  color: #999;
  padding: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.color-picker {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 30rpx;
  justify-content: center;
}

.color-picker .color-option {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: white;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.5);
  cursor: pointer;
  transition: all 0.3s ease;
}

.color-picker .color-option:active {
  transform: scale(0.95);
}

/* 新增：自定义颜色选择弹窗样式 */
.popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.popup-content {
  width: 85%;
  background-color: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
}

.popup-close {
  font-size: 48rpx;
  color: #999;
  font-weight: 300;
}

.popup-color-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
  margin-bottom: 10rpx; /* 调整底部边距 */
}

.popup-color-option {
  height: 100rpx;
  border-radius: 50%; /* 圆形 */
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: bold;
  border: 4rpx solid transparent;
  transition: transform 0.2s ease, border-color 0.2s ease;
}

.popup-color-option:active {
  transform: scale(0.9);
}

.popup-actions {
  display: flex;
}

.popup-actions .btn {
  background-color: #007aff;
  color: white;
} 